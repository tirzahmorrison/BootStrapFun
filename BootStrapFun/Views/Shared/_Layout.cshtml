<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="/Content/font-awesome_min.css"/>
    <style>
        body {
            padding-top: 70px; /* Whatever the height of your navbar is; the
                             default is 50px */
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">TIY Sports</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home <span class="sr-only">(current)</span></a></li>
                    <li><a href="#">About Us </a></li>
                    <li><a href="#">Teams </a></li>
                    <li><a href="#">Players </a></li>
                    <li><a href="#">Games </a></li>
                    <li class="dropdown">
                    </li>
                </ul>
                <form class="navbar-form navbar-right">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>                    <!-- /.navbar-collapse -->
        </div>        <!-- /.container-fluid -->
    </nav>









  <div class="container">
      <div class="jumbotron">
          <div class="row">
              <div class="top-left col-lg-10">
                  <h1>TIY Sports</h1>
                  <h6>&hearts; For the students of Suncoast Guild </h6>
              </div>
              <img class="col-sm-2 img-circle" src="~/Content/images/sports.jpg" alt="sports " width="140" height="140">
          </div>
      </div>



    


    <div class="row">
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <img src="~/Content/images/football.jpg" alt="football">
                <div class="caption">
                    <h3>Football</h3>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <img src="~/Content/images/baseball.jpg" alt="baseball">
                <div class="caption">
                    <h3>Baseball</h3>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <img src="~/Content/images/basketball.jpg" alt="basketball">
                <div class="caption">
                    <h3>Basketball</h3>
                </div>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <img src="~/Content/images/quidditch.jpg" alt=quidditch">
                <div class="caption">
                    <h3>Quidditch</h3>
                </div>
            </div>
        </div>
    </div>






    <div class="alert alert-warning" role="alert">
        <p>We've added some brand new features in version 2.0! <a href="#" class="alert-link">Learn More </a></p> 
    </div>

    <div class="alert alert-info" role="alert">
        <div class="row">
            <p class="col-lg-10"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Please <a href="#" class="alert-link">log in </a>to edit</p>
            <div class=" col-lg-2">
                <button type="button" class="btn btn-primary"><i class="fas fa-facebook-f"></i>Facebook</button>
            </div>
        </div>
    </div>
   

    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <ul class="list-group">

            <li class="list-group-item active"><i class="fas fa-chevron-circle-right"></i>Teams<span class="badge">317 teams</span></li>
            <li class="list-group-item"><span class="badge">8 players</span><div class="row"><img class="col-sm-2" src="/Content/images/dartboard.png" alt="dartboard"><div class="col-sm-10"><h3>Tampa Dart Dynamos</h3>Cras justo odio</div></div></li>
            <li class="list-group-item"><span class="badge">6 players</span><div class="row"><div class="col-sm-2"><img class="img-responsive img-rounded" src="~/Content/images/pingpong.jpg" alt="pingpong"></div><div class="col-sm-10"><h3>St Pete Ping Pong Power House</h3>Cras justo ipsum pipsim boil toil odio</div></div></li>
            <li class="list-group-item"><span class="badge">6 players</span><div class="row"><div class="col-sm-2"><img class="img-responsive img-rounded" src="~/Content/images/golf.jpg" alt="dartboard"></div><div class="col-sm-10"><h3>Orlando Golf Gang</h3>Cras justo odio</div></div></li>
        </ul>
        <div class="panel-footer">
            <div class="text-center">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li>
                            <a href="#" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        <li><a href="#">1</a></li>
                        <li><a href="#">2</a></l
                        <li><a href="#">3</a></li>
                        <li><a href="#">4</a></li>
                        <li><a href="#">5</a></li>
                        <li>
                            <a href="#" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>



    <div class="panel panel-primary">
        <!-- Default panel contents -->
        <div class="panel-heading"><i class="fas fa-check-square"></i>Games</div>

        <!-- Table -->
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Home Team</th>
                    <th>Away Team</th>
                    <th>Score</th>
                </tr>
            </thead>
            <tbody>
                <tr class="success">
                    <th>1</th>
                    <td>Tampa Dart Dynamos</td>
                    <td>Buffalo BullsEyes</td>
                    <td>20-17</td>
                </tr>
                <tr>
                    <th>2</th>
                    <td>St Pete Ping Pong Power House</td>
                    <td>Philly Paddlers</td>
                    <td>18-12</td>
                </tr>
                <tr>
                    <th>3</th>
                    <td>Orlando Golf Gang</td>
                    <td>Portland Putters</td>
                    <td>2-1</td>
                </tr>
            </tbody>
        </table>
    </div>
    </div>

   
        @RenderBody()
        

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
